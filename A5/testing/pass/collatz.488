% Verifies collatz conjecture for input numbers.
{
    var i:integer
    get i
    while i > 0 do
        repeat
            if i / 2 * 2 = i then
                i := i / 2
            else
                exit when i > 21844
                i := i + (i + 1) / 2
            fi
%            put i,newline
        until i = 1
        if i not= 1 then
            put "went too high",newline
        else
            put "proved",newline
        fi
        get i
    end
}
