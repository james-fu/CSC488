%
% Ackermann function
%
{
  func A(m : integer, n:integer) : integer {
    if m = 0 then
      result n + 1
    else if n = 0 then
      result A(m-1,1)
    else
      result A(m-1,A(m,n-1))
    fi fi
  }
  var n,m : integer
  put "enter two numbers", newline
  %@output=enter two numbers
  get n, m
  %@input=2
  %@input=2
  
  put "A(",n,",",m,")=",A(n,m)
  %@output=A(2,2)=7
  
}
